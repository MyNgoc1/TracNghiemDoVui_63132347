<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dvn2"
    tools:context=".PythonActivity">

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="305dp"
        android:layout_height="42dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/btnAnswer4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuestion"
        app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/btnAnswer4"
        android:layout_width="302dp"
        android:layout_height="45dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuestion" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/btnAnswer3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuestion"
        app:layout_constraintVertical_bias="0.785" />

    <Spinner
        android:id="@+id/btnQuestion"
        android:layout_width="406dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="start"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"></Spinner>

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="307dp"
        android:layout_height="43dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/btnAnswer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuestion" />
</androidx.constraintlayout.widget.ConstraintLayout>